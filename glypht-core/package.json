{
  "name": "@glypht/core",
  "type": "module",
  "version": "0.0.7",
  "description": "Library for subsetting and (de)compressing font files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./compression.js": {
      "import": {
        "types": "./dist/compression.d.ts",
        "default": "./dist/compression.js"
      }
    },
    "./subsetting.js": {
      "import": {
        "types": "./dist/subsetting.d.ts",
        "default": "./dist/subsetting.js"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "prepack": "rollup -c rollup.config.js",
    "watch": "rollup --watch -c rollup.config.js",
    "test": "rollup -c rollup.config.js && vitest --watch=false"
  },
  "files": [
    "dist/**/*.{js,ts,wasm}",
    "README.md"
  ],
  "author": "valadaptive",
  "license": "(MIT OR ISC OR Apache-2.0)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/valadaptive/glypht.git",
    "directory": "glypht-core"
  },
  "homepage": "https://glypht.valadaptive.dev/docs/api/modules/_glypht_core.html",
  "devDependencies": {
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.3.1",
    "rollup": "^4.44.2",
    "typedoc": "^0.28.7"
  },
  "dependencies": {
    "@glypht/web-worker": "^1.6.0",
    "@smol-range/decompress": "^0.1.0"
  }
}
